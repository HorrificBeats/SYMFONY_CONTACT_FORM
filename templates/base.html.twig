<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																												           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand navbar-light mb-5 container">
			<div class="container-fluid">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						{% if not app.user %}
							<li class="nav-item">
								<a class="nav-link active" href="/" tabindex="-1" aria-disabled="true">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="/login">Login</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="/register">Register</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="/logout">Logout</a>
							</li>
							<li class="nav-item">
								<a class="nav-link active">
									You are logged in as
									<span class='text-danger'>
										{{ app.user.username }}
									</span>
								</a>
							</li>
						{% endif %}

					</ul>
				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}
		<style>
			body {
				background-image: linear-gradient(to right top, #da4c9d, #cb61b6, #b973c9, #a583d7, #9291de, #8995e2, #8099e5, #779de7, #719bec, #6b99f1, #6597f6, #5f95fb);
				background-position: center;
				background-repeat: no-repeat;
				background-size: cover;
				height: calc(100vh - 1rem);
			}
			* {
				font-family: arial;
			}
			nav {
				background: rgba(255, 255, 255, 0.25);
				backdrop-filter: blur(4px);
				-webkit-backdrop-filter: blur(4px);
				border-radius: 10px;
				margin-top: 1rem;
			}
		</style>
	</body>
</html>
